{
	"name": "ng-config",
	"displayName": "NG Config allows to open partial angular.json configs",
	"description": "Open virtual partial angular.json files",
	"version": "0.0.1",
	"publisher": "Benjamin Dobler",
	"icon": "logo.png",
	"repository": {
		"url": "https://github.com/BenjaminDobler/ngconfig.git",
		"type": "git"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/angular.json"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "ngconfig.openProjectPartial",
				"title": "Angular Config"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "ngconfig.openProjectPartial",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^3.9.4",
		"@types/vscode": "^1.32.0"
	}
}
